<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each rests}}
        
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
                
              <span class="badge badge-pill badge-danger font-weight-normal">
                
                <i class="fas fa-star fa-xs" style="color:black">{{this.rating}}</i>
              </span>
            
            </div>
            <a href="/restaurants/{{this._id}}" class="text-secondary">顯示詳細資料</a>
            <a href="/delete/{{this._id}}" class="deleteData">刪除餐廳資料</a>
            <a href="/edit/{{this._id}}">修改餐廳資料</a>
            <a class="testing" id="{{this._id}}" onclick="confirm(id)">測試功能</a>
          </div>
          
        
        
        {{/each}}
        <a href="/addNew" class="addres">新增餐廳</a>
      </div>
      
    </div>
  </div>
</div>

<script>
    function confirm(id){
        Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                console.log("/123/"+id)
                window.location = "/delete/"+id
            
        }
        })
    }
    
      
      
    </script>
</body>
</html>